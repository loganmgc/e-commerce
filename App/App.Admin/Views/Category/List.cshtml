@{
    ViewBag.Title = "Product Categories";
}
@model List<App.Admin.Models.ViewModels.Category.CategoryListViewModel>

<h2>Ürün Kategorileri</h2>

<table class="table">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Renk</th>
            <th>Icon Css Class</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Color</td>
                <td>@category.IconCssClass</td>
                <td>
                    <a class="btn btn-info" asp-controller="Category" asp-action="Edit" asp-route-categoryId="@category.Id">Güncelle</a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id">Sil</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
