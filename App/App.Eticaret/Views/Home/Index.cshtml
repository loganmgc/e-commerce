@{
    ViewData["Title"] = "Home Page";
}
<vc:categories-slider />
<vc:featured-products />

<!-- Banner Begin -->
<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/theme/img/banner/banner-1.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="banner__pic">
                    <img src="~/theme/img/banner/banner-2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->
<!-- Latest Product Section Begin -->
<section class="latest-product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <vc:filtered-products filter-type="Latest" count="6"/>
            </div>
            <div class="col-lg-4 col-md-6">
                <vc:filtered-products filter-type="TopRated"/>
            </div>
            <div class="col-lg-4 col-md-6">
                <vc:filtered-products filter-type="Review"/>
            </div>
        </div>
    </div>
</section>
<!-- Latest Product Section End -->
<!-- Blog Section Begin -->
<vc:from-the-blog/>
<!-- Blog Section End -->