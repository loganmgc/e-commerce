@model List<MyProductsViewModel>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/theme/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>My Products</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Home</a>
                        <span>My Products</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    @if (ViewBag.Error is not null)
                    {
                        <div class="alert alert-danger col-12 text-center">
                            @ViewBag.Error
                        </div>
                    }
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img style="width: 100px" src="@item.ImageUrls" alt="">
                                        <h5>@item.ProductName</h5>
                                    </td>
                                    <td>
                                        <h5>@item.CategoryName</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @(item.Price.ToString("C"))
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            @item.StockAmount
                                        </div>
                                    </td>
                                    <td>
                                        <a class=site-btn mr-auto" asp-controller="Product" asp-action="Edit" asp-route-productId="@item.ProductId">Edit</a>
                                    </td>
                                    <td>
                                        <a class="site-btn mr-auto" asp-controller="Product" asp-action="Delete" asp-route-productId="@item.ProductId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a asp-controller="Product" asp-action="Create" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        ADD PRODUCT
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
