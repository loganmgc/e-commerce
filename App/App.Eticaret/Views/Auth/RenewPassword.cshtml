@model RenewPasswordWithVerificationCodeViewModel

<div class="container-fluid">
    <div class="row">
        <h2 class="col-12 text-center">Change Password</h2>
        @if (!string.IsNullOrWhiteSpace(ViewBag.Error))
        {
            <div class="alert alert-danger col-12 text-center">
                @ViewBag.Error
            </div>
        }
        <div class="col-12 col-md-6 offset-md-3">
            <form asp-controller="Auth" asp-action="RenewPassword" asp-route-verificationCode="@Model.VerificationCode" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="VerificationCode" />
                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="site-btn mr-auto">Change Password</button>
                    <a asp-controller="Auth" asp-action="Register" class="site-btn mr-2">Register</a>
                    <a asp-controller="Auth" asp-action="ForgotPassword" class="site-btn">Forgot Password</a>
                </div>
            </form>
        </div>
    </div>
</div>