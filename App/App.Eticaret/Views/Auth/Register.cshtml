@model RegisterUserViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <div class="row">
        <h2 class="col-12 text-center">Register</h2>
        <div class="col-12 col-md-6 offset-md-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success col-12 text-center">
                    @TempData["SuccessMessage"]
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-controller="Auth" asp-action="Login" class="site-btn mr-2">Login</a>
                </div>
            }
            else
            {
                <form method="post" asp-controller="Auth" asp-action="Register">
                    <div class="form-group">
                        <label asp-for="FirstName">Firstname</label>
                        <input class="form-control" asp-for="FirstName" required>
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Lastname</label>
                        <input class="form-control" asp-for="LastName" required>
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input class="form-control" asp-for="Email" required>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input class="form-control" asp-for="Password" required>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordRepeat">Confirm Password</label>
                        <input class="form-control" asp-for="PasswordRepeat" required>
                        <span class="text-danger" asp-validation-for="PasswordRepeat"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="site-btn mr-auto">Register</button>
                        <a asp-controller="Auth" asp-action="Login" class="site-btn mr-2">Login</a>
                    </div>
                </form>
            }
        </div>
    </div>
</div>